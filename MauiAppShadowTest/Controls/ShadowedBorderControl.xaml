<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppShadowTest.Controls.ShadowedBorderControl">
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <VerticalStackLayout Spacing="25">
                <Border StrokeThickness="2" Background="Transparent" ZIndex="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="14" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Fuchsia" Offset="0,40" Opacity="0" Radius="20" />
                    </Border.Shadow>
                </Border>
                <Border BackgroundColor="White" Stroke="AliceBlue" StrokeThickness="3" ZIndex="1">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="14" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Opacity="1" />
                    </Border.Shadow>
                    <ContentPresenter Content="{TemplateBinding Content}" />
                </Border>
            </VerticalStackLayout>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>
